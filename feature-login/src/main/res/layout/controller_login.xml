<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:layout_marginTop="@dimen/fourty_margin"
        android:contentDescription="@string/logo"
        android:scaleType="fitXY"
        android:src="@drawable/ic_startscreen_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="@dimen/half_default_margin"
        app:layout_constraintBottom_toTopOf="@id/tvCreateAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/vpUsers"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="28dp"
                app:layout_constraintBottom_toTopOf="@id/vpIndicatorUsers"
                android:layout_height="0dp" />

            <com.github.vivchar.viewpagerindicator.ViewPagerIndicator
                android:id="@+id/vpIndicatorUsers"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:layout_width="200dp"
                app:itemSize = "8dp"
                app:itemScale="1.3"
                app:delimiterSize="10dp"
                android:layout_height="20dp" />
        </android.support.constraint.ConstraintLayout>

        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/error_loading_users"
            android:textColor="@color/snow"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/create_new_account"
        android:textAllCaps="true"
        android:textColor="@color/snow"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/ivPoweredBy2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivPoweredBy1"
        android:layout_width="64dp"
        android:layout_height="15dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_powered_by"
        android:tint="@color/virgilGrayLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivPoweredBy2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivPoweredBy2"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_twilio_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivPoweredBy3"
        app:layout_constraintStart_toEndOf="@id/ivPoweredBy1" />

    <ImageView
        android:id="@+id/ivPoweredBy3"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_virgil_logo"
        app:layout_constraintBottom_toBottomOf="@id/ivPoweredBy2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPoweredBy2"
        app:layout_constraintTop_toTopOf="@id/ivPoweredBy2" />

</android.support.constraint.ConstraintLayout>