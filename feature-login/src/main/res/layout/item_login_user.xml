<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/ivUserPic"
        android:elevation="2dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/user_pic"
        tools:src="@drawable/rect_rounded_gradient_2"/>

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/snow"
        android:maxLines="1"
        android:textSize="14sp"
        android:ellipsize="end"
        tools:text="Aaron Gordon"
        app:layout_constraintTop_toBottomOf="@id/ivUserPic"/>

    <TextView
        android:id="@+id/tvInitials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@id/ivUserPic"
        app:layout_constraintBottom_toBottomOf="@id/ivUserPic"
        app:layout_constraintStart_toStartOf="@id/ivUserPic"
        app:layout_constraintEnd_toEndOf="@id/ivUserPic"
        android:textSize="34sp"
        android:textColor="@color/snow"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="AG" />

</android.support.constraint.ConstraintLayout>